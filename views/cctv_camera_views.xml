<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Camera Views -->
    <record id="view_cctv_camera_tree" model="ir.ui.view">
        <field name="name">cctv.camera.tree</field>
        <field name="model">cctv.camera</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence"/>
                <field name="name"/>
                <field name="identifier"/>
                <field name="group_id"/>
                <field name="location"/>
                <field name="protocol"/>
                <field name="status"/>
                <field name="is_active"/>
            </tree>
        </field>
    </record>

    <record id="view_cctv_camera_form" model="ir.ui.view">
        <field name="name">cctv.camera.form</field>
        <field name="model">cctv.camera</field>
        <field name="arch" type="xml">
            <form string="Camera">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_stream"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-video-camera"
                                invisible="['|', ('stream_url', '=', False), ('is_active', '=', False)]">
                            <span class="o_stat_text">Open Stream</span>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="identifier"/>
                            <field name="sequence"/>
                            <field name="group_id"/>
                            <field name="is_active"/>
                        </group>
                        <group>
                            <field name="location"/>
                            <field name="protocol"/>
                            <field name="stream_url" placeholder="rtsp://user:pass@host:554/..."/>
                            <field name="snapshot_url"/>
                            <field name="refresh_interval"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="username"/>
                            <field name="password" password="True"/>
                        </group>
                        <group>
                            <field name="status"/>
                            <field name="last_check" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="note" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_cctv_camera_kanban" model="ir.ui.view">
        <field name="name">cctv.camera.kanban</field>
        <field name="model">cctv.camera</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="name"/>
                <field name="location"/>
                <field name="group_id"/>
                <field name="status"/>
                <field name="stream_url"/>
                <field name="is_active"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="o_kanban_image">
                                <span class="fa fa-video-camera fa-3x" aria-label="Camera"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <div class="text-muted" t-if="record.location.raw_value">
                                    <field name="location"/>
                                </div>
                                <div class="text-muted" t-if="record.group_id.value">
                                    <span class="fa fa-object-group"/>
                                    <field name="group_id"/>
                                </div>
                                <div>
                                    <span class="badge" t-attf-class="badge badge-default status-{{ record.status.raw_value or 'unknown' }}">
                                        <field name="status"/>
                                    </span>
                                </div>
                            </div>
                            <div class="o_kanban_footer">
                                <a t-if="record.id.raw_value"
                                   t-att-href="'/cctv/play/%s' % record.id.raw_value"
                                   target="_blank"
                                   class="btn btn-secondary btn-sm">
                                    Open Stream
                                </a>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Group Views -->
    <record id="view_cctv_camera_group_tree" model="ir.ui.view">
        <field name="name">cctv.camera.group.tree</field>
        <field name="model">cctv.camera.group</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="camera_count"/>
            </tree>
        </field>
    </record>

    <record id="view_cctv_camera_group_form" model="ir.ui.view">
        <field name="name">cctv.camera.group.form</field>
        <field name="model">cctv.camera.group</field>
        <field name="arch" type="xml">
            <form string="Camera Group">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="color" widget="colorpicker"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Cameras">
                            <field name="camera_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="location"/>
                                    <field name="protocol"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions & Menus -->
    <record id="action_cctv_cameras" model="ir.actions.act_window">
        <field name="name">Cameras</field>
        <field name="res_model">cctv.camera</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{"search_default_is_active": 1}</field>
    </record>

    <record id="action_cctv_camera_groups" model="ir.actions.act_window">
        <field name="name">Camera Groups</field>
        <field name="res_model">cctv.camera.group</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_cctv_root"
              name="CCTV"
              sequence="40"
              action="action_cctv_cameras"
              groups="cctv_monitoring.group_cctv_user"/>
    <menuitem id="menu_cctv_camera_groups" name="Camera Groups" parent="menu_cctv_root" action="action_cctv_camera_groups" sequence="2" groups="cctv_monitoring.group_cctv_manager"/>
</odoo>
